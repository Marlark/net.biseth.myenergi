    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
			"type": "node",
			"request": "attach",
			"name": "Attach to Homey",
			"address": "192.168.86.49",
			"port": 9229,
			"localRoot": "${workspaceFolder}",
			"remoteRoot": "/"
		}
    ]
}